@import url('https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;700&family=Merriweather+Sans:wght@400;700&family=Source+Code+Pro:wght@400;700&display=swap');
@import "//at.alicdn.com/t/font_2352663_5aa9vjhptrd.css"

:root
  --boxes: #f5f7f9
  --primary-color: #3884ff
  --bg-color: white
  --heading-char-color: #9daab6
  --boxes-darker2: #bac2c9
  --font: "Merriweather Sans", 'Source Han Sans SC VF', '楷体', '楷体-简', '思源宋体' !important
  --code-font: 'Source Code Pro', "Fira Code", "Consolas", 'Source Han Sans SC VF', "楷体", '楷体-简', "思源宋体"

a.sidebar-link 
  font-weight: 500 !important

body, input, textarea, button
  font-family: var(--font)

body.theme-light
  --code-bgcolor: #f6f6f6
body:not(.theme-dark) .code-group-nav, 
body.theme-light .code-group-nav
  background-color: #f6f6f6
body:not(.theme-dark) .code-group-nav-tab.active, 
body.theme-light .code-group-nav-tab.active
  background-color: #f6f6f6
body:not(.theme-dark) .code-group-nav-tab:hover, 
body.theme-light .code-group-nav-tab:hover
  background-color: transparent

body:not(.theme-dark) .code-group-nav-tab.active:before, 
body.theme-light .code-group-nav-tab.active:before,
body:not(.theme-dark) .code-group-nav-tab.active:after, 
body.theme-light .code-group-nav-tab.active:after
  background: transparent

body:is(:not(.theme-dark), .theme-light, .theme-dark) .theme-default-content :is(p, li, table) code
  // background: linear-gradient(to right, #12c2e9, #c471ed, #f64f59) !important
  // -webkit-background-clip: text !important
  // color: transparent
  // font-weight: 1000
  background-color: rgba(255, 229, 100, 0.3)
  // background-color: rgb(246, 246, 246)
  padding: .2em .4em
  border-radius: .2em
  color: #18045f

code
  font-weight: 1000

img:not([src*="logo.svg"])
  display: block
  max-width: 90%
  box-shadow: 0 5px 11px 0 rgba(0, 0, 0, 18%), 0 4px 15px 0 rgba(0, 0, 0, 15%)
  border-radius: 3px
  margin: 1em auto

.page .page-info,
.page-nav,
.code-group-nav-tab,
.page-meta,
.vue-run-sfc-header-button
  font-family: var(--font)!important

code, 
kbd, 
.line-number
  font-family: 'Source Code Pro', "Fira Code", "Consolas", "楷体", '楷体-简', "思源宋体" !important

.CodeMirror
  font-family: 'Source Code Pro', '楷体' !important

ul, ol
  line-height: 2
  padding-left: 2.2em

// blockquote
blockquote::before
  content: "❝"
  color: rgba(64, 184, 250, .5)
  font-size: 34px
  line-height: 1
  font-weight: 700
blockquote
  padding: 20px
  text-size-adjust: 100%
  line-height: 1.55em
  font-weight: 400
  border-radius: 6px
  color: #2d2e36
  font-style: normal
  text-align: left
  box-sizing: inherit
  border-left: none
  border: 1px solid rgba(64, 184, 250, .6)
  background: rgba(64, 184, 250, .2) 
blockquote p
  color: #2d2e36
blockquote::after
  content: "❞"
  color: rgba(64, 184, 250, .5)
  float: right

.theme-dark blockquote 
  background: rgba(73, 92, 105, .5)
  border: 1px solid rgba(73, 92, 105, .6)
  color: #e2e1e4
.theme-dark blockquote::before 
  color: rgba(73, 92, 105, .5)
.theme-dark blockquote::after 
  color: rgba(73, 92, 105, .5)
.theme-dark blockquote p 
  color: #e2e1e4
