@import url('https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;700&display=swap');
@import "//at.alicdn.com/t/font_2352663_8bv8dbkn0yh.css"

:root
    --boxes: #f5f7f9
    --primary-color: #3884ff
    --bg-color: white
    --heading-char-color: #9daab6
    --boxes-darker2: #bac2c9
    --font: "Merriweather", /*"思源宋体",*/ "楷体"!important
    --code-font: 'Source Code Pro', "Fira Code", "Consolas", /*"思源宋体",*/ "楷体"

img
    display: block
    max-width: 100%
    margin: 0 auto

body
    font-family: var(--font)

.page .page-info,
.page-nav,
.code-group-nav-tab
    font-family: var(--font)!important

code,
kbd,
.line-number
    font-family: var(--code-font) !important

ul, ol
    line-height: 2

blockquote 
  width: 100%
  background-color: var(--boxes)
  border-left: 4px solid var(--primary-color)
  border-radius: 0.3rem
  padding: 1rem
  color: black
  padding-bottom: 5px

blockquote > p 
  margin-bottom: 20px

select 
  background-color: var(--bg-color) !important
  border-radius: 0.3rem !important
  border: solid 1px var(--boxes-darker2) !important
  box-shadow: none !important
  color: var(---heading-text-color) !important
  font-size: 0.9rem !important
  font-weight: 500 !important
  padding: 0.3rem !important
  height: 2.1rem
  font-family: var(--font)
  outline: none

select[multiple]
  height: 5rem

iframe 
  border: none