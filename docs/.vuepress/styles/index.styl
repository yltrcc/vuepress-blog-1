select 
  background-color: var(--bg-color) !important
  border-radius: 0.3rem !important
  border: solid 1px var(--boxes-darker2) !important
  box-shadow: none !important
  color: var(---heading-text-color) !important
  font-size: 0.9rem !important
  font-weight: 500 !important
  padding: 0.3rem !important
  height: 2.1rem
  font-family: var(--font)
  outline: none

select[multiple]
  height: 6rem

iframe
  border: none

.code-group-nav-tab
  border-radius: 0 !important

strong 
  background: linear-gradient(to right, #00b4db, #0083b0)
  -webkit-background-clip: text
  color: transparent
.theme-dark strong
  background: linear-gradient(135deg, #CE9FFC 10%, #7367F0 100%)
  -webkit-background-clip: text
  color: transparent

// gitalk
#vuepress-plugin-comment 
  max-width: 820px
  margin: 0 auto

.markdown-body .highlight pre, .markdown-body pre
  background-color: var(--code-bgcolor) !important

// 评论区背景色设置
.gt-comments
  margin-top: 10px !important
  padding: 10px !important
  border-radius: 5px !important
  background: #fff !important
  box-shadow: inset 3px 3px 5px rgba(0, 0, 0, .1),
              inset -3px -3px 5px rgba(0, 0, 0, .1) !important

.gt-container .gt-comment-admin .gt-comment-content 
  background: var(--bg-color) !important

.gt-container .gt-comment-content:hover
  box-shadow: none !important

// gitalk：暗色模式
.theme-dark .gt-container .gt-comment-admin .gt-comment-content
  background: #1e1e1e
.theme-dark .gt-container .gt-comment-body
  color: var(--textColor) !important
.theme-dark .gt-container .gt-comment-admin .gt-comment-content 
  background: #1e1e1e !important
.theme-dark .gt-comments
  background: #1e1e1e !important
  box-shadow: inset 3px 3px 5px rgba(0, 0, 0, .5),
              inset -3px -3px 5px rgba(0, 0, 0, .5) !important

// 暗色表格设置
.theme-dark .markdown-body table tr
  background: #1e1e1e !important
  border-color: rgb(128, 128, 128) !important
.theme-dark .markdown-body table th,
.theme-dark .markdown-body table td
  border-color: rgb(128, 128, 128) !important

// algolia
.search-box .DocSearch.DocSearch-Button {
    cursor: text;
    width: 10rem;
    height: 2rem;
    color: #5b5b5b;
    border: 1px solid var(--border-color);
    border-radius: 0.25rem;
    font-size: 0.9rem;
    padding: 0 0.5rem 0 0rem;
    outline: none;
    transition: all 0.2s ease;
    background: transparent;
    background-size: 1rem;
}

.search-box .DocSearch-Button-Container {
    margin-left: 0.4rem;
}

.search-box .DocSearch-Button .DocSearch-Search-Icon {
    width: 16px;
    height: 16px;
    position: relative;
    top: 0.1rem;
}

.search-box .DocSearch-Button-Placeholder {
    font-size: 0.8rem;
}

.search-box .DocSearch-Button-Keys {
    position: absolute;
    right: 0.1rem;
}

.search-box .DocSearch-Button-Key {
    font-size: 12px;
    line-height: 20px;
}